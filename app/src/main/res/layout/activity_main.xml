<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/gradient_color_primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="60dp"
                    android:text="Create Event"
                    android:textColor="@color/textColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="70dp"
                    android:background="@drawable/transparent_button"
                    android:text="NEXT"
                    android:textStyle="bold" />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <android.support.design.widget.TextInputLayout style="@style/myTextInputLayout">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/title"
                        style="@style/myTextInputEditText"
                        android:hint="Title" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout style="@style/myTextInputLayout">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/website"
                        style="@style/myTextInputEditText"
                        android:hint="Website" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    style="@style/myTextView"
                    android:text="Category"
                    android:textSize="17sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_categoria"
                    style="@style/myRecyclerView" />

                <android.support.design.widget.TextInputLayout style="@style/myTextInputLayout">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/location"
                        style="@style/myTextInputEditText"
                        android:drawableRight="@drawable/ic_location_on_black_24dp"
                        android:hint="Location" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_weight="1"
                        android:textColorHint="@color/colorPrimaryDark">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/date"
                            style="@style/myTextInputEditText"
                            android:drawableRight="@drawable/ic_date_range_black_24dp"
                            android:hint="Date" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:textColorHint="@color/colorPrimaryDark">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/time"
                            style="@style/myTextInputEditText"
                            android:drawableRight="@drawable/ic_access_time_black_24dp"
                            android:hint="Time" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_tickets"
                    style="@style/myRecyclerView" />

                <Button
                    style="@style/myButton"
                    android:layout_width="wrap_content"
                    android:background="@drawable/button_indigo"
                    android:drawableLeft="@drawable/ic_add_black_24dp"
                    android:text="Add New" />

                <Button
                    style="@style/myButton"
                    android:layout_width="match_parent"
                    android:background="@drawable/action_button"
                    android:textSize="16sp"
                    android:text="Next: Rap Battle Event Details" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>

</LinearLayout>